<custom@Button>:
	font_size: 60


<MyBox>:

	
	id: calculator
	display: entry
	


	cols:1
	TextInput:

		id: entry
		multiline: False
		font_size: 40
	GridLayout:
		cols: 4

		Button:
			
			text: "1"
			on_release: entry.text += self.text


		Button:
			text: "2"
			
			on_release: entry.text += self.text
			
		Button:
			text: "3"
			on_release: entry.text += self.text
			
		Button:
			
			text: "+"
			on_release: entry.text += self.text
		Button:
			
			text: "4"
			on_release: entry.text += self.text
		Button: 
			
			text: "5"
			on_release: entry.text += self.text
		Button:
			
			text: "6"
			on_release: entry.text += self.text
		Button:
			
			text: "-"
			on_release: entry.text += self.text
		Button:
			
			text: "7"
			on_release: entry.text += self.text
		Button:
			
			text: "8"
			on_release: entry.text += self.text
		Button:
			
			text: "9"
			on_release: entry.text += self.text
		Button:
			
			text: "*"
			on_release: entry.text += self.text

		Button:
			
			text: "AC"
			on_release: entry.text = ""

		Button:
			
			text: "0"
			on_release: entry.text += self.text

		Button:
			
			text: "."
			on_release: entry.text += self.text

			
		Button:
			
			text: "/"
			on_release: entry.text += self.text

	GridLayout:
		cols: 1
		Button:
			
			text: "="
			on_release: calculator.calculation(entry.text)




